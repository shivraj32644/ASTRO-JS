---
import classNames from 'classnames';
import { useState } from 'react';
import ReactMarkdown from 'react-markdown';
import remarkGfm from 'remark-gfm';
import type { IJoinOurTeam } from '../../../schemas/block';
import { normalizeCmsImage } from '../../../utils/common';
import {RJoinOurTeam} from '../react-blocks/RJoinOurTeam'
const { data }: { data?: IJoinOurTeam } = Astro.props
---

    <div id="openPosition" class="bg-white relative">
      {data?.miscellaneousFigure?.map((item, index) => {
        const figure = normalizeCmsImage(item?.figure);

        return (
          <div
          
            class={classNames(
              'absolute',
              item?.alignment === 'Top-Left' && 'top-0 left-0',
              item?.alignment === 'Top-Right' && 'top-0 right-0',
              item?.alignment === 'Bottom-Left' && 'bottom-0 left-0',
              item?.alignment === 'Bottom-Right' && 'bottom-0 right-0',
              item?.alignment === 'Center-Left' && 'bottom-1/2 left-0',
              item?.alignment === 'Center-Right' && 'bottom-1/2 right-0'
            )}
          >
            <img
              src={figure?.url}
              alt={figure?.alternativeText}
              class="object-cover w-auto h-auto"
            />
          </div>
        );
      })}
      <div
        class="container mx-auto p-5 lg:p-10
    flex flex-col items-center justify-center"
      >
        <div class="flex flex-col items-center">
          <h2
            class="font-medium text-lg lg:text-xl tracking-[0.02em] text-brand uppercase text-left overflow-hidden before:h-[2px] after:h-[2px] after:bg-brand 
           after:inline-block after:relative after:align-middle after:w-6
           before:bg-brand before:inline-block before:relative before:align-middle 
           before:w-6 before:right-2 after:left-2 
           mb-2 lg:mb-4"
          >
            {data?.heading}
          </h2>
          <h2 class="text-[1.75rem] lg:text-[2rem] text-center mb-8 lg:mb-10">
            {data?.subheading}
          </h2>

          <RJoinOurTeam data={data} client:load/>
        </div>
      </div>
      
    </div>

